@model PaginatedList<ProductViewModel>
<partial name="_Notification" />
<div class="=Container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary" ;">
                Product List
            </h2>
        </div>

    </div>
</div>
<form asp-action="Index">
    <div class="d-flex">
        <input class="form-control" placeholder="Search..." value="@ViewData["CurrentFilter"]" type="text"
            autocomplete="off" name="SearchString" />
    </div>
</form>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["TitleSortParm"]"
                    asp-route-currentFilter="@ViewData["CurrentFilter"]">
                    @Html.DisplayNameFor(model => model[0].Title)
                </a>
            </th>
            <th>

                @Html.DisplayNameFor(model => model[0].Description)
            </th>
            <th>

                @Html.DisplayNameFor(model => model[0].ISBN)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["TitleSortParm"]"
                    asp-route-currentFilter="@ViewData["CurrentFilter"]">
                    @Html.DisplayNameFor(model => model[0].Author)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["TitleSortParm"]"
                    asp-route-currentFilter="@ViewData["CurrentFilter"]">
                    @Html.DisplayNameFor(model => model[0].ListPrice)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Price50)
                <a asp-action="Index"></a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Price100)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].CategoryName)
            </th>
            <th style="text-align: center;">Manage</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ISBN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ListPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price50)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price100)
                </td>
                <td>
                    <img src="@item.ImagePath" alt="Image from @item.Title" width="50" height="50"
                        style="object-fit: cover; border-radius: 5px; display: block; margin: 0 auto;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    <div class="d-flex justify-content-center gap-1">
                        <a class="btn btn-primary" asp-action="Create"> <i class="bi bi-plus-circle"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i
                                class="bi bi-pencil-square"></i></a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i
                                class="bi bi-ticket-detailed"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i
                                class="bi bi-trash3"></i></a>
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a class="btn btn-primary" asp-action="Index" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-pageNumber="@(Model.PageIndex - 1)"
    asp-route-currentFilter="@ViewData["CurrentFilter"]" class="btn btn-default @prevDisabled">
    Previous
</a>
<a class="btn btn-primary" asp-action="Index" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-pageNumber="@(Model.PageIndex + 1)"
    asp-route-currentFilter="@ViewData["CurrentFilter"]" class="btn btn-default @nextDisabled">
    Next
</a>
