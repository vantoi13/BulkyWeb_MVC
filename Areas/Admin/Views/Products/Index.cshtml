@model IEnumerable<BulkyWeb.ViewModels.ProductViewModel>

<partial name="_Notification" />
<div class="=Container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary";">
                Product List
            </h2>
        </div>

    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ISBN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price50)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price100)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th style="text-align: center;">Manage</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ISBN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ListPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price50)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price100)
                </td>
                <td>
                    <img src="@item.ImagePath" alt="Image from @item.Title" width="50" height="50"
                        style="object-fit: cover; border-radius: 5px; display: block; margin: 0 auto;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    <div class="d-flex justify-content-center gap-1">
                        <a class="btn btn-primary" asp-action="Create"> <i class="bi bi-plus-circle"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i
                                class="bi bi-pencil-square"></i></a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i
                                class="bi bi-ticket-detailed"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i
                                class="bi bi-trash3"></i></a>
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>
