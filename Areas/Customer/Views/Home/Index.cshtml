@model IEnumerable<BulkyWeb.ViewModels.ProductViewModel>
<div class="row g-4"> <!-- Sử dụng g-4 để tạo khoảng cách giữa các cột -->
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-sm-6 d-flex align-items-stretch"> <!-- Thêm align-items-stretch -->
            <div class="card border-0 shadow border-top border-5 rounded w-100">
                <img src="@item.ImagePath" class="card-img-top rounded" alt="Image from @item.Title"
                    style="width: 100%; height: 350px; object-fit: cover;" />
                <div class="card-body d-flex flex-column"> <!-- Đảm bảo body chiếm không gian linh hoạt -->
                    <h5 class="card-title text-dark opacity-75 text-uppercase text-center">@item.Title</h5>
                    <p class="text-warning text-center mb-3">by <b>@item.Author</b></p>
                    <p class="text-dark text-opacity-75 text-uppercase text-center mb-0">List Price:
                        <span class="text-decoration-line-through">@item.ListPrice.ToString("c")</span>
                    </p>
                    <p class="text-dark text-opacity-75 text-uppercase text-center mb-0">As low as:
                        <span>@item.Price100.ToString("c")</span>
                    </p>

                </div>
                <div>
                    <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-id="@item.Id"
                        class="btn btn-primary bg-gradient border-0 form-control">Details</a>
 
                </div>
            </div>
        </div>
    }
</div>
