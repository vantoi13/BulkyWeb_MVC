@model IEnumerable<BulkyWeb.Models.Category>


<partial name="_Notification" />
<div class="=Container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 a text-end">
            <a class="btn btn-primary" asp-action="Create"> <i class="bi bi-plus-circle"></i>Create New Category</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisplayOrder)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayOrder)
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id" ><i
                                class=" bi-pencil-square"></i></a> |
                        <a asp-action="Details" class="btn btn-danger" asp-route-id="@item.Id"><i
                                class="bi bi-ticket-detailed"></i></a> |
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i
                                class="bi bi-trash3"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
