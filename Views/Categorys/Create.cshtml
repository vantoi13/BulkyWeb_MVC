@model BulkyWeb.Models.Category
<partial name="_Notification" />
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Category</h4>

<div class="row pb-2">
    <div class="col-md-4">
        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisplayOrder" class="control-label"></label>
                <input asp-for="DisplayOrder" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" style="width:150px" />
                <a class=" btn btn-primary mx-2 " style="width: 150px;" asp-action="Index">Back to List</a>

            </div>
       
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
